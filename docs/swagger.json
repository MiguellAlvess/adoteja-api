        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Enter 'Bearer' followed by your token. Example 'Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...'"
      }
    },
    "schemas": {
      "Account": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "32021a5f-cbf8-4b55-a686-46f5a3c31da4"
          },
          "name": {
            "type": "string",
            "example": "João Silva"
          },
          "email": {
            "type": "string",
            "example": "joao@example.com"
          },
          "phone": {
            "type": "string",
            "example": "+55 11 99999-9999"
          },
          "city": {
