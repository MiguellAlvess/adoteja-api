                  "name": {
                    "type": "string",
                    "minLength": 1,
                    "example": "Rex Junior"
                  },
                  "species": {
                    "type": "string",
                    "minLength": 1,
                    "example": "dog"
                  },
                  "gender": {
                    "type": "string",
                    "enum": ["MALE", "FEMALE"],
                    "example": "MALE"
                  },
                  "age": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 40,
