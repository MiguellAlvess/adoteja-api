generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PetStatus {
  AVAILABLE
  ADOPTED
}

enum AdoptionStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
}

model Account {
  id           String     @id @default(uuid())
  name         String
  email        String     @unique
  passwordHash String
  phone        String
  city         String
  state        String

  pets         Pet[]
  adoptions    Adoption[]
  @@map("accounts")
}

model Pet {
  id          String    @id @default(uuid())
  ownerId     String
  owner       Account   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  name        String
  species     String
  gender      String
  age         Int
  size        String
  description String?
  status      PetStatus @default(AVAILABLE)
  photoUrl    String?

  adoptions   Adoption[]

  @@index([ownerId])
  @@map("pets")
}

model Adoption {
  id          String          @id @default(uuid())
  petId       String
  pet         Pet             @relation(fields: [petId], references: [id], onDelete: Cascade)

  adopterId   String
  adopter     Account         @relation(fields: [adopterId], references: [id], onDelete: Cascade)

  status      AdoptionStatus  @default(PENDING)
  requestedAt DateTime        @default(now())
  completedAt DateTime?

  @@index([petId])
  @@index([adopterId])
  @@map("adoptions")
}
